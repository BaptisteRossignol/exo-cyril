<form method="post" action="{{ path('contrat_delete', {'id': contrat.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce contrat?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contrat.id) }}">
    <button>Supprimer</button>
</form>
