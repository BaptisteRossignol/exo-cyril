{% extends 'base.html.twig' %}

{% block title %}Job{% endblock %}

{% block body %}
    <h1>Job</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Job</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td>{{ job.id }}</td>
                <td>{{ job.name }}</td>
                <td>
                    <a href="{{ path('job_show', {'id': job.id}) }}">Visualiser</a>
                    <a href="{{ path('job_edit', {'id': job.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td>Aucun job</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('job_new') }}">Cr√©er un job</a>
{% endblock %}
