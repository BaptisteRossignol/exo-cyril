{% extends 'base.html.twig' %}

{% block title %}Competence{% endblock %}

{% block body %}
    <h1>Competence</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
            </tr>
        </thead>
        <tbody>
        {% for competence in competences %}
            <tr>
                <td>{{ competence.id }}</td>
                <td>{{ competence.name }}</td>
                <td>
                    <a href="{{ path('competence_show', {'id': competence.id}) }}">Visualiser</a>
                    <a href="{{ path('competence_edit', {'id': competence.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td>Aucune competence</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('competence_new') }}">Cr√©er une competence</a>
{% endblock %}
